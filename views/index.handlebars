{{!-- header --}}
<div class="jumbotron jumbotron-fluid bg-danger text-light text-center p-5">
  <h1 class="appName"> <i class="fas fa-hamburger"></i> Burgers App</h1>
</div>

{{!-- Main body --}}
<div class="container">
  <div class="row">
    <div class="col-12 col-md-3">
      {{!-- start form for new burger ADD SEQUELIZE ACTION  --}}
      <form action="/burgers/create" method="POST">
				<input type="text" class="form-control" name="burger_name" value="" id="enter_text">
				<button type="submit" class="btn btn-danger" id="text-enter-button">Add A Burger!</button>
			</form>
    </div>
    {{!-- end left column --}}
    {{!-- right column to display burgers--}}
    <div class="col-12 col-md-9">
      {{!-- make two columns in right column --}}
      <div class="row">
        {{!-- inner left column --}}
        <div class="col-12 col-md-6">
          <h2>Burger's Left</h2>
          <ul class="list-group">
            {{!-- use handlebars to print uneaten burgers --}}
            {{#each burgerData}}
            {{#unless devoured}}
            <li class="list-group-item d-flex">
              {{burger_name}}
              <span class="ml-auto">
                <button data-id="{{id}}" data-devoured="true" class="btn btn-sm btn-danger eat-burger">
                  Eat This Burger!
                </button>
              </span>
            </li>
            {{/unless}}
            {{/each}}
          </ul>
        </div>
        {{!-- end inner left --}}
        {{!-- inner right --}}
        <div class="col-12 col-md-6">
          <h2>Burgers Eaten So Far</h2>
          <ul class="list-group">
            {{!-- use handlebars to print burgers already eaten --}}
            {{#each burgerData}}
            {{#if devoured}}
            <li class="list-group-item d-flex">
              {{burger_name}}
              <span class="ml-auto">
                <button data-id="{{id}}" data-devoured="false" class="btn btn-sm btn-warning eat-burger">
                  I Want Another One!
                </button>
              </span>
            </li>
            {{/if}}
            {{/each}}
          </ul>
        </div>
        {{!-- end inner right --}}
      </div>
    </div>
  </div>
</div>

<footer class="sticky-bottom">
      <div class="container-fluid">
        Created by Rishabh Goel Copyright &copy; 2019
      </div>
    </footer>

<script src="assets/js/burgers.js"></script>
